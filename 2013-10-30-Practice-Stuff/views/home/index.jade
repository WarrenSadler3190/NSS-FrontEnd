extends ../template/layout


block content
  .row
    .small-12.columns
      table
        thead: tr 
          -var friends = ['jessie','rob','christian','joey']
            each friend in friends
              th= friend
        tbody: tr
          -var friends = ['jessie','rob','christian','joey']
            each friend in friends
              case friend
                when 'jessie'
                  td(style='width:#{100/friends.length}px;') Good
                when 'rob'
                  td(style='width:#{100/friends.length}px;') Good
                when 'christian'
                  td(style='width:#{100/friends.length}px;') Okay
                when 'joey'
                  td(style='width:#{100/friends.length}px;') Okay
