extends ../template/layout
include ../mixins/form-helper.jade

block content
  .row
    .small-12.columns
      form#newSong(action='/songs', method='post')
        legend 
          h3.subheader New songs
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'duration', 'Song Duration (seconds)')
            mixin field(4, 'genres', 'Genres (blues, rock, country)')
            mixin field(4, 'art', 'Song Image')
            mixin field(4, 'filename', 'Filename')
          .row
            .small-12.columns
              label(for='lyrics') Lyrics:
              textarea#content(name='lyrics')
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Songs
