extends ../template/layout
include ../mixins/form-helper.jade

  //- title: String,
  //- author: String,
  //- date: String,
  //- tags: String,
  //- image: String,
  //- content: String

block content
  .row
    .small-12.columns
      h1.subheader Posts Page
  .row
    .small-2.columns
      a.button.small.radius.expand(href="/").
        Home
    .small-2.columns
      a.button.small.radius.success.expand(href="/posts/new").
        New
    .small-2.columns
      a.button.small.radius.expand(href="/posts").
        Posts
    .small-6.columns
  .row 
    .small-12.columns
      #posts
        each post in posts
          .post
            a(href='/posts/#{post._id}'): h3.subheader= post.title
            hr
            span.authorName= post.author
            span= post.date
            img(src="+ post.image + ")
            p= post.content
            p= post.tag
            form(action='/posts/#{post._id}', method='post')
              input(type='hidden', name='_method', value='delete')
              button.button.tiny.radius.alert(type='submit') Delete
            a.button.tiny.radius(href='/posts/#{post._id}/edit') Edit


