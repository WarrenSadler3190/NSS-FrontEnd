extends ../template/layout
include ../mixins/form-helper.jade

  //- title: String,
  //- author: String,
  //- date: String,
  //- tags: String,
  //- image: String,
  //- content: String

block content
  .row
    .small-12.columns
      h1.subheader= post.title

  .row
    .small-2.columns
      a.button.small.radius.expand(href="/").
        Home
    .small-2.columns
      a.button.small.radius.success.expand(href="/posts/new").
        New
    .small-2.columns
      a.button.small.radius.expand(href="/posts").
        Posts
    .small-6.columns
  .row
    .small-12.columns
      form(action='/posts/#{post.id}', method='put')
        fieldset
          legend New Posts
          .row
            mixin field(4, 'title', 'Title', post.title, null, true)
            mixin field(4, 'author', 'Author', post.author)
            mixin field(4, 'date', 'Date', post.date)
          .row
            mixin field(12, 'tags', 'Tags', post.tags)
          .row
            mixin field(12, 'img', 'Image', post.image)
          .row
            .small-12.columns
              label(for='content') Content:
              textarea#content(name='content')
                '#{post.content}'

          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Post
