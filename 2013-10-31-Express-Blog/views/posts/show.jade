block content
  .row
    .small-12.columns
      h1.subheader= post.title

  .row
    .small-2.columns
      a.button.small.radius.expand(href="/").
        Home
    .small-2.columns
      a.button.small.radius.success.expand(href="/posts/new").
        New
    .small-2.columns
      a.button.small.radius.expand(href="/posts").
        Posts
    .small-6.columns
  .row 
    .small-12.columns
      #posts
        .post
          h3.subheader= post.title
          hr
          span.authorName= post.author
          span= post.date
          img(src= post.image)
          p= post.content
          p= post.tag


