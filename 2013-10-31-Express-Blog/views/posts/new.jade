extends ../template/layout
include ../mixins/form-helper.jade

block content
  .row
    .small-12.columns
      h1.subheader New Posts Page
  .row
    .small-2.columns
      a.button.small.radius.expand(href="/").
        Home
    .small-2.columns
      a.button.small.radius.success.expand(href="/posts/new").
        New
    .small-2.columns
      a.button.small.radius.expand(href="/posts").
        Posts
    .small-6.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        fieldset
          legend New Posts
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'author', 'Author')
            mixin field(4, 'date', 'Date', date)
          .row
            mixin field(12, 'tags', 'Tags')
          .row
            mixin field(12, 'img', 'Image')
          .row
            .small-12.columns
              label(for='content') Content:
              textarea#content(name='content')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Post
